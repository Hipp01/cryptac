<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Card">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/details_spacing</item>
        <item name="android:background">@drawable/bg_outline</item>
        <item name="android:padding">@dimen/card_padding</item>
    </style>

    <style name="CardTitle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/font_size_xl</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_marginBottom">@dimen/card_padding</item>
    </style>

    <style name="CardSubtitle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/font_size_l</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Link">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/bg_ripple</item>
        <item name="android:clickable">true</item>
        <item name="android:padding">10dp</item>
        <item name="android:layout_marginTop">@dimen/card_padding</item>
    </style>

    <style name="LinkLogo">
        <item name="android:layout_width">19dp</item>
        <item name="android:layout_height">19dp</item>
    </style>

    <style name="LinkName">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">10dp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/font_size_l</item>
    </style>

    <style name="LinkArrow">
        <item name="android:layout_width">25dp</item>
        <item name="android:layout_height">25dp</item>
    </style>

    <style name="Toolbar" parent="Theme.Cryptac">
        <item name="colorControlNormal">@color/white</item>
    </style>

</resources>